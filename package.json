{
  "version": "0.0.3",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build-tailwind": "cross-env NODE_ENV=production npx tailwindcss -o ./dist/tailwind.css --minify",
    "build": "tsdx build --tsconfig ./tsconfig.build.json && yarn build-tailwind",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "release": "dotenv release-it",
    "generate": "plop"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "react": ">=17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "name": "react-daisyui",
  "author": "Christian Blandford",
  "module": "dist/react-daisyui.esm.js",
  "size-limit": [
    {
      "path": "dist/react-daisyui.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-daisyui.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@heroicons/react": "^1.0.5",
    "@rollup/plugin-alias": "^3.1.9",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-google-analytics": "^6.2.9",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addons": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@tailwindcss/typography": "^0.5.2",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "daisyui": "^2.2.2",
    "dotenv": "^16.0.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "plop": "^3.0.5",
    "postcss": "^8.4.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "release-it": "*",
    "size-limit": "^7.0.8",
    "storybook-addon-themes": "^6.1.0",
    "tailwindcss": "^3.0.23",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "nanoid": "^3.3.1",
    "tailwind-merge": "^1.2.0"
  }
}
